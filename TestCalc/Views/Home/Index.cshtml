@model TestCalc.Models.Operation

@{
    ViewData["Title"] = "Calculator";
}

<h3>Operation</h3>

<hr />
<form asp-controller="Home" asp-action="Index" method="post">
    <div class="form-group">
        <div class="row">
            <label asp-for="OperationType" class="col-lg-2"></label>
            <select asp-for="OperationType" class="col-lg-2" asp-items="Html.GetEnumSelectList<OperationType>()">
                <option selected="selected" value="">Select</option>
            </select>
        </div>
        <div class="row">
            <label asp-for="FirstNumber" class="col-lg-2"></label>
            <input type="number" asp-for="FirstNumber" class="col-lg-2" />
        </div>
        <div class="row">
            <label asp-for="SecondNumber" class="col-lg-2"></label>
            <input type="number" asp-for="SecondNumber" class="col-lg-2" />
        </div>
        <div class="row">
            <label asp-for="Result" class="col-lg-2"></label>
            <input type="number" disabled="disabled" class="col-lg-2" asp-for="Result" />
        </div>

        <div class="row">
            <input type="submit" value="Submit" asp-action="Index" />
        </div>
    </div>
</form>